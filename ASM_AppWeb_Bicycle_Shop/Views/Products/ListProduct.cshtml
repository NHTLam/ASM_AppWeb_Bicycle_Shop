@model IEnumerable<ASM_Bicycle_Shops.Models.Product>
@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- bootstrap css -->
<link rel="stylesheet" type="text/css" href="~/a/css/bootstrap.min.css">
<!-- style css -->
<link rel="stylesheet" type="text/css" href="~/a/css/style.css">
<!-- Responsive-->
<link rel="stylesheet" href="~/a/css/responsive.css">
<!-- fevicon -->
<link rel="icon" href="~/a/images/fevicon.png" type="image/gif" />
<!-- Scrollbar Custom CSS -->
<link rel="stylesheet" href="~/a/css/jquery.mCustomScrollbar.min.css">
<!-- Tweaks for older IEs-->
<link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
<!-- fonts -->
<link href="https://fonts.googleapis.com/css?family=Great+Vibes|Open+Sans:400,700&display=swap&subset=latin-ext" rel="stylesheet">
<!-- owl stylesheets -->
<link rel="stylesheet" href="~/a/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/a/css/owl.theme.default.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />


<div>
    <div class="banner_section layout_padding">
        <div id="main_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <img src="~/a/images/background1.png">
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container">
                        <div class="row">
                            <img src="~/a/images/background1.png">
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="container">
                        <div class="row">
                            <img src="~/a/images/background1.png">
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div>
</div>
<div class="product_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="product_taital">Our Products</h1>
            </div>
        </div>
        @foreach(var i in Model)
        {           
        <div class="product_section_2 layout_padding">
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <div class="product_box">
                        <h4 class="bursh_text">@i.ProductName</h4>
                        <img src="~/a/images/img-1.png" class="image_1">
                        <div class="btn_main">
                            <div class="buy_bt">
                                <ul>
                                    <li class="active"><a href="~/a/css">Buy Now</a></li>
                                </ul>
                            </div>
                            <h3 class="price_text">@i.ProductPrice</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<script src="~/a/js/jquery.min.js"></script>
<script src="~/a/js/popper.min.js"></script>
<script src="~/a/js/bootstrap.bundle.min.js"></script>
<script src="~/a/js/jquery-3.0.0.min.js"></script>
<script src="~/a/js/plugin.js"></script>
<!-- sidebar -->
<script src="~/a/js/jquery.mCustomScrollbar.concat.min.js"></script>
<script src="~/a/js/custom.js"></script>
<!-- javascript -->
<script src="~/a/js/owl.carousel.js"></script>
<script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "100%";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>
